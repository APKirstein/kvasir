<div class="large-6 large-centered column">
	<div class="table">
		<table id="market_table">
			<thead>
				<tr>
					<th>Station</th>
					<th>Item</th>
					<th>Buy Price</th>
					<th>Sell Price</th>
					<th>Date</th>
					<th>Kvasir Index</th>
					<th>Delete</th>
				</tr>
			</thead>
			<tbody>
				<% @tracked_items.each do |item, value| %>
					<tr>
						<td id="regionid">Amarr</td>
						<td id="name"><%= item.item.name %></td>
						<td id="buy_price">Buy: <%= item.item.buy_price %></td>
						<td id="sell_price">Sell: <%= item.item.sell_price %></td>
						<td id="info_date">Date: <%= item.item.info_date %></td>
						<td id="kvasir">(kvasir index)</td>
						<td id="delete"><%= button_to "Delete", tracked_item_path(item),
							method: :delete, class: "button tiny round", data: {confirm: "Are you sure you want to delete
							this item?"} %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="row">
		<p><%= paginate @tracked_items %></p>
	</div>
</div>
