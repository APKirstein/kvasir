<div class="large-6 large-centered column">
  <div class="table">
    <h3> All Users </h3>
    <table id="user_table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Username</th>
          <th>Role</th>
        </tr>
      </thead>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.admin %></td>
          <td>
            <%= button_to "Delete", admin_user_path(user),
              method: :delete, data: {confirm: "Are you sure you want to delete
              this review?"} %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
  <div>
  <%= paginate @users %>
  </div>
</div>
