<div class="large-6 large-centered column">
  <div class="table">
    <h3> All Users </h3>
    <table id="user_table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Username</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.username %></td>
            <td>
              <% if user.admin? %>
                admin
              <% else %>
                user
              <% end %>
            </td>
            <td>
              <% if !user.admin? %>
                <%= button_to "Make Admin", admin_user_path(user),
                  method: :put, data: {confirm: "Are you sure you want to make this user an admin?"} %>
              <% end %>
            </td>
            <td>
              <%= button_to "Delete", admin_user_path(user),
                method: :delete, data: {confirm: "Are you sure you want to delete
                this user?"} %>
            </td>
          </tr>
        <% end %>
      <tbody>
    </table>
  </div>
  <div>
  <%= paginate @users %>
  </div>
</div>
