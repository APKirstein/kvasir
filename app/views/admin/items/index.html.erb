<div class="large-6 large-centered column">
  <div class="table">
    <h3> All Items </h3>
    <table id="market_table">
      <thead>
        <tr>
          <th>Item</th>
          <th>Region</th>
          <th>Date</th>
        </tr>
      </thead>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.region %></td>
          <td><%= item.info_date %></td>
          <td>
            <%= button_to "Delete", admin_item_path(item),
              method: :delete, data: {confirm: "Are you sure you want to delete
              this review?"} %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
  <div>
  <%= paginate @items %>
  </div>
</div>
